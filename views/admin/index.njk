{% extends "layout.njk" %}


{%block content%}
    <main class="index-content">
        <h2>Gerenciar receitas</h2>
        <a href="/admin/create" class="global-button">Nova receita</a>

        <div class="recipes">
            {% for recipe in recipes %}
                 <div class="recipe" id="{{recipes.id}}">
                     <div class="recipe-image">
                         <img src="{{recipe.image}}" alt="Imagem {{recipes.title}}">
                     </div>
                     <div class="infos">
                         <h4>{{recipe.title}}</h4>                            
                         <p class="autor">por {{recipe.author}}</p>
                     </div>

                     <a class="a-button" href="/admin/{{recipe.id}}">Visualizar</a>
                 </div>
             {% endfor %}
         </div>  
    </main>
{%endblock%}